{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "email/templates/**/*", "watchAssets": true },
      { "include": "assets/**/*", "watchAssets": true }
    ],
    "tsConfigPath": "tsconfig.build.json"
  }
}
